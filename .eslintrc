{
	"extends": "airbnb-base",
	"plugins": [
		"jest",
		"prettier"
	],
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"node": true,
		"jest/globals": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 4
			}
		],
		"quotes": [
			"error",
			"double"
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"indent": [
			"error",
			"tab"
		]
	},
	"globals": {
		"__DEV__": true,
		"fixture": true,
		"test": true
	},
	"overrides": [
		{
			"files": [
				"server/**/*.js"
			],
			"rules": {
				"import/no-cycle": "off"
			}
		}
	]
}